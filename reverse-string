function reverse(str) {
 let arr =  str.split('')
  arr.reverse();

 return arr.join('')

}
console.log(reverse(`hello`));



  public static void main(String[] args) {

          String str = "hello";
          var sb= new StringBuilder(str);
          sb.reverse();

        System.out.println(sb.toString());

    }
    
    
    public static void main(String[] args) {

        String str = "hello";

        BinaryOperator<String> function = (acc, ele) ->  ele +acc;

        var result = Arrays.stream(str.split("")).reduce("", function);

        System.out.println(result);
    }
    
    
function reverse(str) {
  const callFun = (acc, ele) => ele + acc;

  return str.split('').reduce(callFun, '')

}

console.log(reverse(`hello`));
